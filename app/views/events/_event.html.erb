<% if event.datetime >= Time.now %>
  <div class="text-center col-sm-6 col-md-4 mt-2 mb-3">
    <div class="thumbnail magnification">

      <%= content_tag 'div', '',
        class: 'event-background',
        style: "background-image: url(#{asset_pack_path('media/images/event_thumb.jpg')})"
      %>

      <div class="thumbnail-inner event-info-inner">
        <div class="text-light">
          <h3><%= link_to event.title, event_path(event), class: 'stretched-link a-none' %></h3>
            <h5>
              <small><%= l event.datetime, format: :long %></small>
            </h5>
            <div class="buffer-both"><%= event.address %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
