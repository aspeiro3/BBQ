<%# Паршиал для отображения формы создания нового события %>
<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="mt-4 col-sm-12 col-md-12 col-lg-8 col-xl-6">
    <h2>Редактирование события</h2>

    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">Название</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Адрес</label>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Дата</label>
        <%= f.datetime_select :datetime, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Описание</label>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        или <%= link_to 'вернуться', :back %>
      </div>
  </div>
<% end %>
