<span class="user">
  <span class="user-avatar">
    <%= image_tag user_avatar_thumb(user), class: 'img-icon mt-2 ml-1' %>
  </span>
  <span class="user-name">
    <% if request.path == user_path(user) %>
    <em><%= user.name %></em>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
</span>
